{
    "name": "my-app",
    "version": "0.1.0",
    "author": {
        "name": "Mads Engel Lundt"
    },
    "private": true,
    "scripts": {
        "start": "node scripts/start.js",
        "build": "node scripts/build.js",
        "lint": "tslint -p ./",
        "tsc": "tsc -p ./ --noEmit",
        "tsc:watch": "tsc -p ./ --noEmit -w",
        "pretest": "npm run lint & npm run tsc",
        "test": "node scripts/test.js --env=jsdom"
    },
    "dependencies": {
        "autoprefixer": "8.0.0",
        "case-sensitive-paths-webpack-plugin": "2.1.1",
        "chalk": "2.3.1",
        "css-loader": "0.28.9",
        "dotenv": "5.0.0",
        "extract-text-webpack-plugin": "3.0.2",
        "file-loader": "1.1.6",
        "fork-ts-checker-webpack-plugin": "^0.3.0",
        "fs-extra": "5.0.0",
        "html-webpack-plugin": "2.30.1",
        "material-ui": "^0.20.0",
        "object-assign": "4.1.1",
        "postcss-flexbugs-fixes": "3.3.0",
        "postcss-loader": "2.1.0",
        "promise": "8.0.1",
        "raf": "3.4.0",
        "react": "^16.2.0",
        "react-dev-utils": "5.0.0",
        "react-dom": "^16.2.0",
        "react-redux": "^5.0.7",
        "react-router-dom": "^4.2.2",
        "redux": "^3.7.2",
        "redux-actions": "^2.2.1",
        "redux-logger": "^3.0.6",
        "redux-requests": "^1.0.2",
        "redux-thunk": "^2.2.0",
        "source-map-loader": "^0.2.3",
        "style-loader": "0.20.2",
        "styled-components": "^3.1.6",
        "sw-precache-webpack-plugin": "0.11.4",
        "ts-loader": "^3.5.0",
        "tsconfig-paths-webpack-plugin": "^2.0.0",
        "tslint": "^5.9.1",
        "tslint-react": "^3.5.1",
        "url-loader": "0.6.2",
        "webpack": "3.11.0",
        "webpack-dev-server": "2.11.1",
        "webpack-manifest-plugin": "1.3.2",
        "whatwg-fetch": "2.0.3"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.9",
        "@types/jest": "^22.1.3",
        "@types/material-ui": "^0.20.7",
        "@types/node": "^9.4.6",
        "@types/react": "^16.0.38",
        "@types/react-dom": "^16.0.4",
        "@types/react-hot-loader": "^3.0.6",
        "@types/react-motion": "^0.0.25",
        "@types/react-redux": "^5.0.15",
        "@types/react-router-dom": "^4.2.4",
        "@types/react-tap-event-plugin": "^0.0.30",
        "@types/redux-actions": "^2.2.4",
        "@types/redux-localstorage": "^1.0.8",
        "@types/redux-logger": "^3.0.5",
        "@types/redux-thunk": "^2.1.0",
        "@types/webpack": "^3.8.8",
        "@types/webpack-env": "^1.13.5",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "jest": "^22.3.0",
        "react-hot-loader": "^3.1.3",
        "ts-jest": "^22.0.4",
        "typescript": "^2.7.2"
    },
    "jest": {
        "verbose": true,
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts,tsx}"
        ],
        "setupFiles": [
            "<rootDir>/config/polyfills.js",
            "<rootDir>/config/jest/jest.stubs.js"
        ],
        "testMatch": [
            "<rootDir>/src/**/__tests__/**/*.ts?(x)",
            "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
        ],
        "testEnvironment": "node",
        "testURL": "http://localhost",
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
            "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
            "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
        },
        "testRegex": "(/spec/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ],
        "moduleNameMapper": {
            "^react-native$": "react-native-web",
            "^Components/(.*)": "./src/components/$1"
        },
        "moduleFileExtensions": [
            "mjs",
            "web.ts",
            "ts",
            "web.tsx",
            "tsx",
            "web.js",
            "js",
            "web.jsx",
            "jsx",
            "json",
            "node"
        ],
        "globals": {
            "window": {},
            "ts-jest": {
                "tsConfigFile": "./tsconfig.test.json"
            }
        },
        "setupTestFrameworkScriptFile": "<rootDir>/config/jest/jest.tests.js"
    },
    "babel": {
        "presets": [
            "react-app"
        ]
    },
    "eslintConfig": {
        "extends": "react-app"
    }
}
